<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h2 class="text-center">Update Profile</h2>
  </div>
</div>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(current_user, :method => 'post') do |f| %>
        <div class="field form-group">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, class: "form-control", id:"emailInput", placeholder:"Enter Email" %>
        </div>

        <div class="form-group">
          <%= f.label :first_name %>
          <%= f.text_field :first_name, class:"form-control", id:"firstName", placeholder:"Enter First Name" %>
        </div>

        <div class="form-group">
          <%= f.label :last_name %>
          <%= f.text_field :last_name, class:"form-control", id:"lastName", placeholder:"Enter Last Name" %>
        </div>

        <div class="form-group">
          <%= f.label :date_of_birth %>
          <%= f.date_select :date_of_birth, class:"form-control", start_year: 1940, end_year: Date.today.year  %>
        </div>

        <div class="form-group">
          <%= f.label :Sex %>
          <div id="sex">
            <%= f.radio_button(:sex, "Male") %>
            <%= label_tag(:sex, "Male") %><br>
            <%= f.radio_button(:sex, "Female") %>
            <%= label_tag(:sex, "Female") %>
          </div>
        </div>

        <div class="form-group">
          <%= f.label :address %>
          <%= f.text_area :address, class:"form-control", id:"address" %>
        </div>

        <div class="form-group">
          <%= f.label :contact_number %>
          <%= f.text_field :contact_number, class:"form-control", id:"contactNumber", placeholder:"Enter Contact Number" %>
        </div>

        <div class="actions">
          <%= f.submit "Update", class:"btn btn-success" %>
          <%= link_to "Cancel", users_path, class: "btn btn-danger", style: "color:white" %>
        </div>
    <% end %>
  </div>
</div>


