<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <h1><%= @header %></h1><br>
    <%= form_for(@course) do |f| %>
        <% if @course.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@course.errors.count, "error") %> prohibited this course from being saved:</h2>

              <ul>
                <% @course.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                <% end %>
              </ul>
            </div>
        <% end %>
        <div class="form-group">
          <%= f.label :course_code %>
          <%= f.text_field :course_code, class:"form-control", id:"courseCode", placeholder:"Enter Course Code", required:true %>
        </div>

        <div class="form-group">
          <%= f.label :course_name %>
          <%= f.text_field :course_name, class:"form-control", id:"courseName", placeholder:"Enter Course Name"%>
        </div>

        <div class="form-group">
          <%= f.label :course_credit %>
          <%= f.text_field :course_credit, class:"form-control", id:"courseCredit", placeholder:"Enter Course Credit"%>
        </div>
        <div class="actions">
          <%= f.submit @submit, class:"btn btn-primary" %>
        </div>
    <% end %>
    <%= link_to 'Back', courses_path, class:"btn btn-primary" %>
  </div>
</div>

