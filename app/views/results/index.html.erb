<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <div class="panel panel-info">
      <div class="panel-heading text-center">Semester List</div>
      <div class="panel-body">
        <div class="table-responsive">
          <table class="table table-bordered">
            <thead>
            <tr>
              <th>Semesters</th>
              <th>Action</th>
            </tr>
            </thead>
            <tbody>
            <% @semesters.each do |semester| %>
                <tr>
                  <td><%= semester.name%></td>
                  <td>
                    <%= link_to 'Add', result_path(semester), class:"btn btn-primary" %>&nbsp;
                    <%= link_to 'Edit', edit_result_path(semester), class:"btn btn-warning" %>&nbsp;
                    <%= link_to 'Destroy', semester, class:"btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %>&nbsp;
                  </td>
                </tr>
            <% end %>
            </tbody>
          </table>
        </div>
      </div>
      <div class="panel-footer">
        <%= link_to 'Home', users_path, class:"btn btn-primary", style:"color:white" %>
      </div>
    </div>
  </div>
</div>
