<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <div class="row">
      <div class="col-md-6">
        <div class="panel panel-info">
          <div class="panel-heading text-center">Current Student List</div>
          <div class="panel-body">
            <div class="table-responsive">
              <table class="table table-bordered">
                <thead>
                <tr>
                  <th>Name</th>
                  <th>Email</th>
                </tr>
                </thead>
                <tbody>
                <% @current_students.each do |student| %>
                    <tr>
                      <td><%= student.first_name + ' ' + student.last_name%></td>
                      <td><%= student.email %></td>
                      <td>
                        <%= link_to 'Add', { controller: 'results', action: 'add_new', student_id: student.id, semester_id: @semester.id }, class:'btn btn-primary'  %>&nbsp;&nbsp;
                      </td>
                    </tr>
                <% end %>
                </tbody>
              </table>
            </div>
          </div>
          <div class="panel-footer">
            <%= link_to 'Home', users_path, class:"btn btn-primary", style:"color:white" %>
          </div>
        </div>
      </div>
      <div class="col-md-6">
        <div class="panel panel-info">
          <div class="panel-heading text-center">All Student List</div>
          <div class="panel-body">
            <div class="table-responsive">
              <table class="table table-bordered">
                <thead>
                <tr>
                  <th>Name</th>
                  <th>Email</th>
                </tr>
                </thead>
                <tbody>
                <% @all_students.each do |student| %>
                    <tr>
                      <td><%= student.first_name + ' ' + student.last_name%></td>
                      <td><%= student.email %></td>
                      <td>
                        <%= link_to 'Update', { controller: 'results', action: 'edit_existing', student_id: student.id, semester_id: @semester.id }, class:'btn btn-primary'  %>&nbsp;&nbsp;
                      </td>
                    </tr>
                <% end %>
                </tbody>
              </table>
            </div>
          </div>
          <div class="panel-footer">
            <%= link_to 'Home', users_path, class:"btn btn-primary", style:"color:white" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

