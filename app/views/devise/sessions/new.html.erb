<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h2 class="text-center">Sign In</h2>
  </div>
</div>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="field form-group">
          <%= f.label :email %>
          <%= f.email_field :email, autofocus: true, class:"form-control", id:"emailInput", placeholder:"Enter Email" %>
        </div>

        <div class="field form-group">
          <%= f.label :password %><br />
          <%= f.password_field :password, autocomplete: "off", class:"form-control", id:"passwordInput", placeholder:"Enter Password" %>
        </div>

        <div class="actions">
          <%= f.submit "Log in", class:"btn btn-success" %>
        </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>

